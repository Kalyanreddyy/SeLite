<?xml version="1.0"?>
<bindings xmlns="http://www.mozilla.org/xbl"
         xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <!-- I have the functions in handlers.js, loaded through ovIDEorSidebar.xul. I can't load that file here through <script> (see also http://mb.eschew.org/15). A less structured alternative is to have the code here in CDATA between <handler>...</handler> as per http://books.mozdev.org/html/mozilla-chp-7-sect-6.html. -->
  <binding id="commands" extends="chrome://global/content/bindings/tree.xml#tree">
      <handlers>
          <handler event="keypress" action="onKeyPress( event );" />
      </handlers>
  </binding>
  <binding id="commandTarget" extends="chrome://global/content/bindings/autocomplete.xml#autocomplete">
      <handlers>
          <handler event="keypress" action="onKeyPressWithShift( event );" />
      </handlers>
  </binding>
  <binding id="seleniumIDEKeys">
      <content>
            <children/>
            <xul:key id="indent-key" modifiers="accel" key="R" command="cmd_indent"/>
            <xul:key id="unindent-key" modifiers="accel" key="L" command="cmd_unindent"/>
      </content>
  </binding>
  <binding id="seleniumIDECommands">
      <content>
          <children/>
            <xul:command id="cmd_indent" oncommand="goDoCommand('cmd_insert_command')"/>
            <xul:command id="cmd_unindent" oncommand="goDoCommand('cmd_insert_comment')"/>
      </content>
  </binding>
</bindings>